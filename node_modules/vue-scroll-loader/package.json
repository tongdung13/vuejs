{
    "name": "vue-scroll-loader",
    "version": "2.2.0",
    "description": "A scroll loading component for vue.js.",
    "main": "dist/scroll-loader.umd.min.js",
    "scripts": {
        "serve": "vue-cli-service serve",
        "build": "vue-cli-service build --target lib --name scroll-loader ./src/plugin-entry.js",
        "lint": "vue-cli-service lint"
    },
    "dependencies": {
        "axios": "^0.19.2",
        "core-js": "^3.6.4",
        "intersection-observer": "^0.7.0",
        "vue": "^2.6.11"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@vue/cli-plugin-babel": "^4.2.3",
        "@vue/cli-plugin-eslint": "^4.2.3",
        "@vue/cli-service": "^4.2.3",
        "@vue/eslint-config-standard": "^4.0.0",
        "babel-eslint": "^10.1.0",
        "eslint": "^5.16.0",
        "eslint-plugin-vue": "^5.0.0",
        "lint-staged": "^9.4.3",
        "sass": "^1.26.3",
        "sass-loader": "^8.0.2",
        "vue-template-compiler": "^2.6.11"
    },
    "gitHooks": {
        "pre-commit": "lint-staged",
        "commit-msg": "commitlint -e"
    },
    "lint-staged": {
        "src/**/*.{js,vue}": [
            "vue-cli-service lint",
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/molvqingtai/vue-scroll-loader.git"
    },
    "keywords": [
        "vue-scroll-loader",
        "vue-scroll",
        "vue-scroll-load",
        "vue-scroll-loading",
        "vue-infinte",
        "vue-infinte-scroll",
        "vue-infinte-loading",
        "scroll-load",
        "scroll-loading"
    ],
    "author": "molvqingtai",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/molvqingtai/vue-scroll-loader/issues"
    },
    "homepage": "https://github.com/molvqingtai/vue-scroll-loader#readme"
}
